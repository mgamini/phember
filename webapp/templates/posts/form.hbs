<form role="form" class="form-horizontal">
  <div class="form-group">
    <label class="col-sm-2 control-label" for="headline">Title</label>
    <div class="col-sm-10">
      {{input type="text" class="form-control" valueBinding="title" placeholder="Post Title"}}
    </div>
  </div>
  <div class="control-group">
    <label class="col-sm-2 control-label" for="body">Body</label>
    <div class="col-sm-10">
      {{input type="text_area" class="form-control" valueBinding="body" placeholder="Post Body"}}
    </div>
  </div>
</form>
